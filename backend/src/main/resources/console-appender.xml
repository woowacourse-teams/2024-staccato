<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%thread] [request_id=%X{request_id:-startup}]
                %highlight(%-5level) [%C.%M.-%L] - %msg%n
            </pattern>
        </encoder>
    </appender>
</included>
