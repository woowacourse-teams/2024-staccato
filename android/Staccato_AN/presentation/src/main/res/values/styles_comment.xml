<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommentProfileImageStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CommentChatBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAppearance">@style/Typography.Body3</item>
        <item name="android:textColor">@color/gray5</item>
    </style>

    <style name="CommentChatBoxStyle.MyComment" parent="CommentChatBoxStyle">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@drawable/shape_my_staccato_log_12dp</item>
    </style>

    <style name="CommentChatBoxStyle.OtherComment" parent="CommentChatBoxStyle">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:background">@drawable/shape_others_staccato_log_12dp</item>
    </style>

</resources>
