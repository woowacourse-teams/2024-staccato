<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/DialogBackgroundStyle">

        <TextView
            android:id="@+id/tv_delete_title"
            style="@style/SubTitleStyle"
            android:text="@string/delete_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_delete_description"
            style="@style/DialogDescriptionStyle"
            android:text="@string/delete_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_delete_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_cancel"
            style="@style/ButtonStyle.Cancel"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_confirm"
            app:layout_constraintTop_toBottomOf="@id/tv_delete_description" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_confirm"
            style="@style/ButtonStyle.Confirm.Narrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_delete_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
