<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/timelineFragment">

    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.woowacourse.staccato.presentation.timeline.TimelineFragment"
        android:label="fragment_timeline"
        tools:layout="@layout/fragment_timeline">

        <action
            android:id="@+id/action_timelineFragment_to_memoryFragment"
            app:destination="@id/memoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/memoryFragment"
        android:name="com.woowacourse.staccato.presentation.memory.MemoryFragment"
        android:label="fragment_memory"
        tools:layout="@layout/fragment_memory">

        <action
            android:id="@+id/action_memoryFragment_to_visitFragment"
            app:destination="@id/visitFragment" />

    </fragment>

    <fragment
        android:id="@+id/visitFragment"
        android:name="com.woowacourse.staccato.presentation.visit.VisitFragment"
        android:label="fragment_visit"
        tools:layout="@layout/fragment_visit" />

</navigation>
