<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.on.staccato.presentation.common.color.recyclerview.ColorSelectionHandler" />

        <variable
            name="categoryColor"
            type="com.on.staccato.presentation.common.color.CategoryColor" />

        <variable
            name="isSelected"
            type="java.lang.Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->handler.onColorSelected(categoryColor)}"
        android:clickable="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_color_selection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/icon_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:colorSelectionIcon="@{isSelected}"
            bind:tintColorRes="@{categoryColor.colorRes}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>