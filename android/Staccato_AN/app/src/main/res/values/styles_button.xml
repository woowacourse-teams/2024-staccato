<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/Typography.Title3</item>
    </style>

    <style name="ButtonStyle.Save" parent="ButtonStyle">
        <item name="android:background">@drawable/selector_button_5dp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/all_save</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <style name="ButtonStyle.Save.Active" parent="ButtonStyle.Save">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Confirm" parent="ButtonStyle">
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:background">@drawable/shape_button_staccato_blue_5dp</item>
        <item name="android:text">@string/all_confirm</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Confirm.Narrow" parent="ButtonStyle.Confirm">
        <item name="android:paddingHorizontal">32dp</item>
    </style>

    <style name="ButtonStyle.Cancel" parent="ButtonStyle">
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:background">@drawable/shape_button_gray1_5dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:text">@string/all_cancel</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <style name="ButtonStyle.Login" parent="ButtonStyle">
        <item name="android:background">@drawable/selector_button_5dp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/login_start</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <style name="ButtonStyle.Login.Active" parent="ButtonStyle.Login">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Recovery" parent="ButtonStyle">
        <item name="android:background">@drawable/selector_button_5dp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/recovery_load</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <style name="ButtonStyle.Recovery.Active" parent="ButtonStyle.Recovery">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.MyPage" parent="ButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableEnd">@drawable/icon_arrow_right</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CurrentLocationStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:text">@string/visit_creation_load_current_location</item>
        <item name="android:textAppearance">@style/Typography.Body4</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="icon">@drawable/icon_crosshair</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/gray3</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeColor">@color/gray3</item>
    </style>

</resources>
