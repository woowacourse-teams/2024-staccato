<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommentProfileImageStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CommentProfileImageStyle.MyProfile" parent="CommentProfileImageStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="CommentProfileImageStyle.OtherProfile" parent="CommentProfileImageStyle">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="CommentChatBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAppearance">@style/Typography.Body3</item>
        <item name="android:textColor">@color/gray5</item>
    </style>

    <style name="CommentChatBoxStyle.MyComment" parent="CommentChatBoxStyle">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/shape_my_staccato_log_12dp</item>
    </style>

    <style name="CommentChatBoxStyle.OtherComment" parent="CommentChatBoxStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:background">@drawable/shape_others_staccato_log_12dp</item>
    </style>

</resources>
